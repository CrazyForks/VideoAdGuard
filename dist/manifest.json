{
    "manifest_version": 3,
    "name": "VideoAdGuard",
    "version": "1.0",
    "description": "检测并跳过B站视频中的植入广告",
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "permissions": [
      "cookies",
      "storage",
      "tabs",
      "activeTab"
    ],
    "host_permissions": [
      "https://*.bilibili.com/*"
    ],
    "action": {
      "default_popup": "./popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.bilibili.com/video/*"],
        "js": ["./content.js"]
      }
    ]
  }